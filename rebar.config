{erl_opts, [
    debug_info,
    warnings_as_errors,
    warn_export_all,
    warn_export_vars,
    warn_obsolete_guard,
    warn_shadow_vars,
    warn_untyped_record,
    warn_unused_import,
    warn_unused_vars
]}.

{deps, [
    {bitmap, ".*", {git, "https://github.com/dalmatinerdb/bitmap.git", {branch, "master"}}},
    {haki, "0.3.1"}
]}.

{plugins, [
    rebar3_run
]}.

{relx, [
    {release, {hakisql, "0.1.0"}, [hakisql]},
    {dev_mode, true},
    {include_erts, false},
    {include_src, false},
    {system_libs, false},
    {extended_start_script, true}
]}.